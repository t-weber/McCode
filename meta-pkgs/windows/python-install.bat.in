@REM Script for installation of McStas/McXtrace-related Python plus modules
@REM
@echo Starting installation of miniconda to c:\@FLAVOR@-@VERSION@\miniconda3
@echo ...
@echo WARNING: Please wait, process may take several minutes to complete!
@echo ...
@start /wait "" Miniconda3-latest-Windows-x86.exe /S /AddToPath=0 /D=c:\@FLAVOR@-@VERSION@\miniconda3
@set PATH=c:\\@FLAVOR@-@VERSION@\\miniconda3;c:\\@FLAVOR@-@VERSION@\\miniconda3\\Scripts;%PATH%
@conda config --add channels conda-forge
@conda install qt pyqt qscintilla2 pyqtgraph pyaml ply matplotlib numpy tornado scipy pillow mpl3d
@echo ...
@echo Press a key below to exit this installation shell...
@echo ...
@pause