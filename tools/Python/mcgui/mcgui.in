#!/bin/sh
# Wrapper script for @P@gui-py

# First ensure that we follow symlink if needed
LINK=`readlink $0`

# Am I a symlink?
if [ "x$LINK" != "x" ]; then
    LIB=`dirname $LINK`
else
    LIB=`dirname $0`
fi
PATH=$LIB/../miniconda3/bin:$PATH
LIB="$LIB/../tools/Python/@P@gui"
TOOL="@P@gui"
VERS="@MCCODE_VERSION@"

canrun() {
    if ! [ -x ${LIB}/mcgui.py ]; then
        exit 127;
    fi

    modules="PyQt5.Qsci"
    cmd=""
    for name in ${modules}; do
        cmd="${cmd}import ${name}; "
    done
    python3 -c "${cmd}"
}

if ( canrun ); then
    python3 ${LIB}/mcgui.py $*
else
    @FLAVOR@_errmsg Failed to run Python ${TOOL} - permissions or missing dependencies\?
fi
